{
  "name": "close-matching-issues",
  "version": "0.0.0",
  "private": true,
  "description": "A GitHub Action for closing issues matching a search query",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx ncc build ./src/main.ts",
    "ci": "npm run lint && npm test",
    "format": "prettier --write **/*.ts **/*.md **/*.yaml **/*.yml",
    "lint": "prettier --check **/*.ts **/*.md **/*.yaml **/*.yml",
    "start": "npx ncc run ./src/main.ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lee-dohm/close-matching-issues.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Lee Dohm",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/github": "^2.2.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.10",
    "@zeit/ncc": "^0.22.3",
    "jest": "^25.5.4",
    "jest-circus": "^26.3.0",
    "nock": "^12.0.3",
    "prettier": "2.0.5",
    "ts-jest": "^25.5.1",
    "typescript": "^3.9.3"
  }
}
